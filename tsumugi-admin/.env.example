# ================================
# TSUMUGI Admin - Environment Variables
# ================================
# Required in production のマークがある変数は本番デプロイ時に必須

# Auth (Required)
# -----------------
ADMIN_PASSWORD=your_secure_admin_password_min_12_chars

# Deploy
# -----------------
PORT=3002
NODE_ENV=development
# Required in production (HTTPS必須)
FRONTEND_URL=https://your-admin-app.vercel.app

# Database
# -----------------
# Railway: file:/app/data/tsumugi-admin.db
DATABASE_URL=

# AI (Required in production)
# -----------------
GEMINI_API_KEY=your_gemini_api_key

# Square API (Optional: mock data if unset)
# -----------------
SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_LOCATION_ID=your_square_location_id
SQUARE_ENVIRONMENT=sandbox

# TSUMUGI Integration (Required in production)
# -----------------
TSUMUGI_API_URL=http://localhost:3001
INTERNAL_API_KEY=your_internal_api_key_min_16_chars

# Email (Required in production)
# -----------------
RESEND_API_KEY=
FROM_EMAIL=noreply@example.com

# Marketing Unsubscribe (Optional)
# -----------------
MARKETING_UNSUBSCRIBE_SECRET=
MARKETING_UNSUBSCRIBE_BASE_URL=

# Frontend (Optional: defaults to /api)
# -----------------
VITE_API_URL=
